{
  "manifest_version": 2,
  "name": "one",
  "version": "0.0.1",

  "description": "One quote from 「ONE · 一个」 each day.",

  "browser_action": {
    "default_icon": {
      "16": "./icons/icon16.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    },
    "default_title": "「ONE · 一个」",
    "default_popup": "popup.html"
  },

  "permissions": [
    "https://blog.mayuko.cn/api/one-api"
  ],

  "content_security_policy": "script-src 'self' https://blog.mayuko.cn/api/one-api; object-src 'self'",

  "author": "adolt"
}
